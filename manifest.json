{
	"name": "Multi-Task Calendar",
	"short_name": "Multi-Task Calendar",
	"id": "MultiTaskCalendar",
	"description": "A multi-task calendar application with notes support",
	"display": "standalone",
	"background_color": "#ffffff",
	"theme_color": "#4CAF50",
	"orientation": "portrait",
	"start_url": "/",
	"scope": "/",
	"edge_side_panel": {
		"preferred_width": 400
	},
	"display_override": [
		"standalone",
		"minimal-ui",
		"browser"
	],
	"launch_handler": {
		"client_mode": "auto"
	},
	"categories": ["productivity", "education", "kids"],
	"dir": "auto",
	"iarc_rating_id": "e58c174a-81d2-5c3c-32cc-34b8de4a52e9",
	"lang": "en",
	"prefer_related_applications": false,
	"icons": [
		{
			"src": "assets/icons/android/icon-512.png",
			"sizes": "512x512",
			"type": "image/png",
			"purpose": "maskable"
		},
		{
			"src": "assets/icons/android/icon-192.png",
			"sizes": "192x192",
			"type": "image/png",
			"purpose": "any"
		}
	],
	"screenshots": [
		{
			"src": "assets/screenshots/screenshot_01.png",
			"sizes": "1128x536",
			"type": "image/png",
			"platform": "wide"
		},
		{
			"src": "assets/screenshots/screenshot_02.png",
			"sizes": "705x416",
			"type": "image/png",
			"platform": "narrow"
		}
	],
	"file_handlers": [
		{
			"action": "/handle-file",
			"accept": {
				"text/plain": [".txt"],
				"image/*": [".jpg", ".jpeg", ".png"]
			}
		}
	],
	"share_target": {
		"action": "/share-target",
		"method": "POST",
		"enctype": "multipart/form-data",
		"params": {
			"files": [
				{
					"name": "attachments",
					"accept": ["text/plain", "image/*"]
				}
			]
		}
	},
	"handle_links": {
		"matches": ["https://calendar-multi-lang.netlify.app/*"],
		"exclude_matches": ["https://calendar-multi-lang.netlify.app/admin/*"]
	},
	"gcm_sender_id": "103953800507",
	"permissions": ["notifications"],
	"widgets": [
		{
			"name": "Calendar Widget",
			"description": "Shows daily tips and notes",
			"tag": "calendar-widget",
			"template": "/widget.html",
			"ms_ac_template": "scripts/widget.js",
			"data": "/api/widget-data",
			"update": 3600,
			"auth": false,
			"types": ["calendar"],
			"screenshots": [
				{
					"src": "assets/screenshots/screenshot_02.png",
					"sizes": "705x416",
					"label": "widget-preview"
				}
			],
			"icons": [
				{
					"src": "assets/screenshots/widget-preview.png",
					"sizes": "320x160"
				}
			]
		}
	],
	"shortcuts": [
		{
			"name": "Health Tips",
			"short_name": "Health",
			"url": "/health-tips",
			"description": "Daily wellness advice and tips",
			"icons": [
				{
					"src": "assets/icons/health.png",
					"sizes": "192x192",
					"type": "image/png",
					"purpose": "any"
				}
			]
		},
		{
			"name": "Today Note",
			"short_name": "Note",
			"url": "/today-note",
			"description": "Create or view today's note",
			"icons": [
				{
					"src": "assets/icons/note.png",
					"sizes": "192x192",
					"type": "image/png",
					"purpose": "any"
				}
			]
		}
	],
	"protocol_handlers": [
		{
			"protocol": "cal-multi-lang",
			"url": "/handle-protocol?url=%s"
		}
	],
	"handle_links": {
		"matches": [
			"https://calendar-multi-lang.netlify.app/*",
			"https://his-geo-quiz-test.netlify.app/calendar*",
			"https://noc-tunisia-chapter.netlify.app/calendar*"
		],
		"exclude_matches": [
			"https://calendar-multi-lang.netlify.app/admin*",
			"https://his-geo-quiz-test.netlify.app/admin*",
			"https://noc-tunisia-chapter.netlify.app/admin*"
		]
	},
	"scope_extensions": [
		{"origin": "https://his-geo-quiz-test.netlify.app"},
		{"origin": "https://noc-tunisia-chapter.netlify.app"}
	]
}	